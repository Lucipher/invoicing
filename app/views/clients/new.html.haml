%h1 New client

- form_for(@client) do |f| 
  = f.error_messages

  %dl
    %dt= f.label :name
    %dd= f.text_field :name

    %dt= f.label :abbreviated
    %dd= f.text_field :abbreviated 

    %dt= f.label :billing_person 
    %dd= f.text_field :billing_person 

    %dt= f.label :phone_number 
    %dd= f.text_field :phone_number 

    %dt= f.label :address 
    %dd= f.text_area :address 

    %dt= f.label :country
    %dd= f.text_field :country 

    %dt= f.label :vat_number 
    %dd= f.text_field :vat_number 

    %dt= f.label :email_address 
    %dd= f.text_field :email_address 

    %dd= f.submit 'Create' 

= link_to 'Back', clients_path 
