%h2 Listing companies

%table
  %thead
    %tr
      %th Name
      %th Phone number
      %th Email address
      %th Url
      %th Address
      %th Vat number
      %th Logo
      %th/
      %th/
      %th/

  %tbody
    - @companies.each do |company|
      %tr
        %td= link_to company.name, company
        %td= h company.phone_number 
        %td= h company.email_address 
        %td= h company.url 
        %td= h company.address 
        %td= h company.vat_number 
        %td= image_tag company.logo.url(:thumb)
        %td= link_to 'Show', company, :class => :button
        %td= link_to 'Edit', edit_company_path(company), :class => :button 
        %td= link_to 'Destroy', company, :confirm => 'Are you sure?', :method => :delete, :class => :button
  %tfoot
    - unless @companies.total_pages == 1
      %tr
        %td.centre{:colspan => 9}= will_paginate( @companies, :page => params[:page] )

= link_to 'New company', new_company_path
